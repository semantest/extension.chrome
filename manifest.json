{
  "manifest_version": 3,
  "name": "Semantest",
  "version": "2.0.0",
  "description": "AI-powered web automation extension built on Semantest framework for ChatGPT and language model integration",
  "background": {
    "service_worker": "build/semantest-background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["build/storage.js", "build/content_script.js"]
    }
  ],
  "action": {
    "default_popup": "src/popup.html",
    "default_title": "Semantest: AI Automation"
  },
  "permissions": [
    "activeTab",
    "scripting",
    "storage",
    "downloads",
    "contextMenus",
    "notifications",
    "tabs"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "icons": {
    "16": "assets/icon16.png",
    "32": "assets/icon32.png",
    "48": "assets/icon48.png",
    "128": "assets/icon128.png"
  }
}