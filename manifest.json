{
  "manifest_version": 3,
  "name": "Semantest",
  "version": "2.0.0",
  "description": "AI-powered web automation extension built on Semantest framework for ChatGPT and language model integration",
  
  "background": {
    "service_worker": "background-polling.js"
  },
  
  "content_scripts": [
    {
      "matches": [
        "https://chatgpt.com/*",
        "https://chat.openai.com/*"
      ],
      "js": ["content-script.js"],
      "run_at": "document_idle"
    },
    {
      "matches": [
        "https://claude.ai/*"
      ],
      "js": ["content-script-claude.js"],
      "run_at": "document_idle"
    },
    {
      "matches": [
        "https://gemini.google.com/*",
        "https://aidemo.googlelabs.com/*",
        "https://labs.google.com/*",
        "https://makersuite.google.com/*",
        "https://aistudio.google.com/*",
        "https://imagen.google.com/*"
      ],
      "js": ["content-script-google.js"],
      "run_at": "document_idle"
    }
  ],
  
  "action": {
    "default_popup": "popup.html",
    "default_title": "Semantest: AI Automation"
  },
  
  "permissions": [
    "tabs",
    "activeTab",
    "scripting",
    "storage",
    "downloads",
    "contextMenus",
    "notifications",
    "webNavigation"
  ],
  
  "host_permissions": [
    "https://chatgpt.com/*",
    "https://*.chatgpt.com/*",
    "https://chat.openai.com/*",
    "https://claude.ai/*",
    "https://*.claude.ai/*",
    "https://gemini.google.com/*",
    "https://aidemo.googlelabs.com/*",
    "https://labs.google.com/*",
    "https://makersuite.google.com/*",
    "https://aistudio.google.com/*",
    "https://imagen.google.com/*",
    "https://*.googlelabs.com/*",
    "https://*.google.com/*",
    "http://localhost:8080/*",
    "http://localhost:8081/*",
    "ws://localhost:8081/*"
  ],
  
  "icons": {
    "16": "assets/icon16.png",
    "32": "assets/icon32.png",
    "48": "assets/icon48.png",
    "128": "assets/icon128.png"
  },
  
  "commands": {
    "new-chat": {
      "suggested_key": {
        "default": "Ctrl+Shift+N",
        "mac": "Command+Shift+N"
      },
      "description": "Create a new chat"
    },
    "create-project": {
      "suggested_key": {
        "default": "Ctrl+Shift+P",
        "mac": "Command+Shift+P"
      },
      "description": "Create a new project"
    }
  }
}