{
  "compilerOptions": {
    "target": "es2018",
    "module": "esnext",
    "lib": [
      "es2018",
      "dom"
    ],
    "jsx": "react-jsx",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true
  },
  "include": [
    ".plasmo/index.d.ts",
    "src/**/*.ts",
    "src/**/*.tsx",
    "../shared/**/*.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}
