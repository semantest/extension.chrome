{
  "name": "@semantest/extension",
  "version": "2.0.0",
  "description": "Browser extension for Semantest - AI automation extension built on Semantest framework",
  "scripts": {
    "build": "tsc && npm run copy-assets",
    "copy-assets": "cp manifest.json build/ && cp -r assets build/ && cp src/*.html build/ 2>/dev/null || true",
    "clean": "rimraf build && mkdir -p build",
    "dev": "npm run build && npm run watch",
    "watch": "tsc --watch",
    "test": "jest",
    "test:watch": "jest --watch",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix",
    "typecheck": "tsc --noEmit"
  },
  "keywords": [
    "semantest",
    "ai-automation",
    "browser-extension",
    "training-system",
    "event-driven",
    "intelligent-automation"
  ],
  "author": "Semantest Team <team@semantest.com>",
  "license": "GPL-3.0",
  "homepage": "https://semantest.com/packages/extension",
  "repository": {
    "type": "git",
    "url": "https://github.com/semantest/semantest.git",
    "directory": "packages/extension"
  },
  "bugs": "https://github.com/semantest/semantest/issues",
  "dependencies": {
    "webextension-polyfill": "^0.10.0"
  },
  "devDependencies": {
    "@types/chrome": "^0.0.268",
    "@types/ws": "^8.5.10",
    "@types/jest": "^29.5.0",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "eslint": "^8.0.0",
    "jest": "^29.5.0",
    "ts-jest": "^29.1.0",
    "rimraf": "^5.0.5",
    "typescript": "^5.5.3"
  },
  "manifest": {
    "host_permissions": [
      "<all_urls>"
    ]
  }
}
