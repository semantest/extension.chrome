{
  "manifest_version": 3,
  "name": "ChatGPT Extension",
  "version": "1.0.0-beta",
  "description": "Automate ChatGPT with projects, custom instructions, prompts, and image downloads",
  "background": {
    "service_worker": "service-worker.js"
  },
  "content_scripts": [
    {
      "matches": ["https://chat.openai.com/*", "https://chatgpt.com/*"],
      "js": ["chatgpt-controller.js"]
    }
  ],
  "action": {
    "default_popup": "popup.html",
    "default_title": "ChatGPT Extension"
  },
  "permissions": [
    "activeTab",
    "storage",
    "downloads"
  ],
  "host_permissions": [
    "https://chat.openai.com/*",
    "https://chatgpt.com/*"
  ],
  "icons": {
    "16": "assets/icon16.png",
    "48": "assets/icon48.png",
    "128": "assets/icon128.png"
  }
}