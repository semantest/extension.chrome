{
  "manifest_version": 3,
  "name": "ChatGPT Extension",
  "version": "2.0.0",
  "description": "AI-powered web automation extension built on Semantest framework for ChatGPT and language model integration",
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["storage.js", "content_script.js"]
    }
  ],
  "action": {
    "default_popup": "popup.html",
    "default_title": "ChatGPT Extension: AI Automation"
  },
  "permissions": [
    "activeTab",
    "scripting",
    "storage",
    "downloads"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "icons": {
    "16": "assets/icon16.png",
    "32": "assets/icon32.png", 
    "48": "assets/icon48.png",
    "128": "assets/icon128.png"
  },
  "web_accessible_resources": [
    {
      "resources": ["assets/*"],
      "matches": ["<all_urls>"]
    }
  ]
}