{
  "manifest_version": 3,
  "name": "Semantest - E2E Test",
  "version": "2.0.0",
  "description": "AI-powered web automation extension - E2E Testing Version",
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["https://chatgpt.com/*", "https://*.openai.com/*"],
      "js": ["chatgpt-controller.js"],
      "run_at": "document_end"
    }
  ],
  "action": {
    "default_popup": "popup.html",
    "default_title": "Semantest: AI Automation"
  },
  "permissions": [
    "activeTab",
    "scripting", 
    "storage",
    "downloads"
  ],
  "host_permissions": [
    "https://chatgpt.com/*",
    "https://*.openai.com/*"
  ],
  "icons": {
    "16": "assets/icon16.png",
    "32": "assets/icon32.png", 
    "48": "assets/icon48.png",
    "128": "assets/icon128.png"
  }
}